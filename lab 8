using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace lab8
{
    internal class Program
    {
        static void Main(string[] args)
        {
            try
            {
                Console.WriteLine("x:");
                //Вводим значение для x
                int x = Convert.ToInt32(Console.ReadLine());
                if (x == 0)
                {
                    Console.WriteLine("z будет равно 0");
                }
                Console.WriteLine("y:");
                //Вводим значение для y
                int y = Convert.ToInt32(Console.ReadLine());
                if (y == 0)
                {
                    Console.WriteLine("исключение");
                }
                double z = x / y;
            }
            catch
            {
                Console.ReadLine();
            }

        }
    }
}
